

Public Function YearsSince(myDate As Date) As Long
    YearsSince = Year(Date) - Year(myDate)
End Function



Public Function YearsSinceOP(myDate As Date, Optional Txt As String) As Variant
    If VBA.IsMissing(Txt) Then
        YearsSinceOP = Year(Date) - Year(myDate)
    Else
        YearsSinceOP = Year(Date) - Year(myDate) & " " & Txt
    End If
End Function



Function TheAge(myDate As Date) As String
    Dim myMonths As Long
    Dim myYears As Long
    myMonths = Month(Date) - Month(myDate)
    myYears = Year(Date) - Year(myDate)
     'to account for negative months
    If myMonths < 0 Then
        myYears = myYears - 1
        myMonths = 12 - VBA.Abs(myMonths)
        
    End If
    TheAge = myYears & " Years & " & myMonths & " Months"
    
End Function



Function TextOnly(TextValue) As String
    Dim i As Long
    Dim t As String
    TextValue = Trim(TextValue)
    For i = 1 To Len(TextValue)
        If Not IsNumeric(Mid(TextValue, i, 1)) Then
            t = t & Mid(TextValue, i, 1)
        End If
    Next i
    TextOnly = t
End Function

Function NumberOnly(TextValue) As Variant
    Dim i As Long
    Dim n As Double
    TextValue = Trim(TextValue)
    For i = 1 To Len(TextValue)
        If IsNumeric(Mid(TextValue, i, 1)) Then
            n = n & Mid(TextValue, i, 1)
        End If
    Next i
    If n > 0 Then
        NumberOnly = n
    Else
        NumberOnly = ""
    End If
End Function

Sub Split_Text_Number()

    Dim myRange As Range
    Dim cell As Range
    Set myRange = Range("A6", "A" & Cells(Rows.Count, 1).End(xlUp).Row)
    
    For Each cell In myRange
        cell.Offset(0, 1).Value = TextOnly(cell.Value)
        cell.Offset(0, 2).Value = NumberOnly(cell.Value)
    Next cell
End Sub


