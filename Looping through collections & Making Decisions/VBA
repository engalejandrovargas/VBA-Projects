Option Explicit

' Procedure to Change Font
Sub With_Change_Font()
' for tab With
    Dim myRange As Range
    'start is fixed but last cell is variable
      Set myRange = Range("A10", "A" & Cells(Rows.Count, 1).End(xlUp).Row)
      With myRange.Font
        .Name = "Arial"
        .Size = 12
        .Bold = True
        ' myRange.WrapText = True
      End With
  
End Sub

' Procedure to Reset Font
Sub With_Reset_Font()
' for tab With

    Dim myRange As Range

  'start is fixed but last cell is variable
  Set myRange = Range("A10", "A" & Cells(Rows.Count, 1).End(xlUp).Row)
  
  With myRange.Font
    .Name = "Calibri"
    .Size = 11
    .Bold = False
   ' myRange.WrapText = False
  End With
  
End Sub

' Procedure to Protect all Sheets

Sub Protect_All_Sheets()
' for tab collections
    Dim sh As Worksheet
    For Each sh In ThisWorkbook.Worksheets
        sh.Protect "test", , , , , True, True, True
    Next sh
    'Note: if you use protection, you might want to lock your VBA code so others can't see the password
    ' You can do this by going to Tools -> VBAProject Properties -> Protection -> Provide a password
End Sub

' Procedure to UnProtect all Sheets

Sub UnProtect_All_Sheets()
' for tab collections & IF
    Dim sh As Worksheet
   ' Dim ShActive As Worksheet
    Application.ScreenUpdating = False
   'Set ShActive = ActiveSheet
    For Each sh In ThisWorkbook.Worksheets
        sh.Unprotect Password:="test"
    Next sh
   ' ShActive.Select
    Application.ScreenUpdating = True
End Sub


Sub Simple_IF()
'for tab IF
    
    If Range("B3").Value <> "" Then Range("C3").Value = Range("B3").Value
    If Range("B4").Value > 0 And Range("B4").Value <= 400 Then
    Range("C4").Value = Range("B4").Value
    End If
    
End Sub
' Procedure to Protect some Sheets

Sub Protect_Special_sheets()
' for tab IF

    Dim sh As Worksheet
    For Each sh In ThisWorkbook.Worksheets
    
        If sh.Name = "Purpose" Then
            'don't allow formatting etc...
            sh.Protect "test"
        ElseIf sh.CodeName = "shWith" Then
            'do nothing
        Else
            'allow formatting for all other sheets
            sh.Protect "test", , , , , True, True, True
        End If
    Next sh
    
    'Note: if you use protection, you might want to lock your VBA code so others can't see the password
    ' You can do this by going to Tools -> VBAProject Properties -> Protection -> Provide a password
End Sub


Sub Simple_Case()
    'for tab Case
    Select Case Range("B3").Value
        Case 1 To 200
           Range("C3").Value = "Good"
        Case 0
            Range("C3").Value = ""
        Case Is > 200
             Range("C3").Value = "Excellent"
        Case Else
            Range("C3").Value = "Bad"
    End Select
End Sub

Sub Simple_GoTo()
    'for tab GoTo
    Range("D3").Value = ""
    If IsError(Range("B3")) Then GoTo GetOut
    Range("C3").Value = Range("B3").Value
    Exit Sub
GetOut:
    Range("D3").Value = "You have an error in the cell"
    Range("C3").Value = ""
End Sub

Sub Unhide_All()
    Dim sh As Worksheet
    For Each sh In ThisWorkbook.Worksheets
    sh.Visible = True
    
    Next sh
End Sub
